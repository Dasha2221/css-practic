<main class="main">
    {{#with hero}}
    <div class="hero">
        <div class="hero_title">{{title}}</div>
        <p class="hero_description">{{description}}</p>
        {{#with button}}
        <button class="hero_button">
            <a class="hero_text" href="{{url}}">{{text}}</a>
        </button>
        {{/with}}
    </div>
    {{/with}}
</main>

{{#with about}}
<div class="about">
    <h2 class="about_heading">{{heading}}</h2>
    <p class="about_info">{{info}}</p>
</div>
{{/with}}

<div class="articles">
    {{> articleCardDark acticles=this}}
</div>