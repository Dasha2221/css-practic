<header class="header">
    <div>
        {{> logo}}
    </div>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

{{#with main}}
<div class="main">
    <div class="main_content">
        <h1 class="main_heading">{{heading}}</h1>
        <p class="main_descriotion">{{descriotion}}</p>
        <a class="button main_button" href="{{href}}">{{button}}</a>
    </div>
    <img src="{{image}}" alt="main img" class="main_imge">
</div>
{{/with}}

<main class="featured">
    {{#each featured}}
    <div class="card">
        <div class="card_image" style="background-image:url({{photo}})"></div>
        <h2 class="card_heading">{{heading}}</h2>
        <p class="card_info">{{info}}</p>
        <a href="{{linkUrl}}" class=" card_button">{{linkText}}</a>
    </div>
    {{/each}}
</main>

<div class="actions">
    {{#each actions}}
    <div class="actions_content">
        <h3 class="actions_heading">{{heading}}</h3>
        <a class="button actions_button" href="{{url}}">{{text}}</a>
    </div>
    {{/each}}
</div>


<footer class=" footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>