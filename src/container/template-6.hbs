<header class="header">
    <div>
        {{> logo}}
    </div>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_description">{{description}}</p>
        {{/with}}
    </div>


    {{#with form}}
    <form class="form">

        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input-{{id}}">
            {{/each}}
        </div>

        <div class="form_checkbox">
            <input type="checkbox" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>

        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>


<div class="updates">
    {{#with updates}}
    <h2 class="updates_title">{{title}}</h2>

    {{#each list}}
    <div class="list">
        <div class="list_nickname">{{nickname}}</div>
        <p class="list_description">{{description}}</p>
    </div>
    {{/each}}

    {{#with show_all}}
    <a href="{{url}}" class="show_link">{{text}}</a>
    {{/with}}
    {{/with}}
</div>

<div class="expirience">
    {{#with expirience}}
    <div class="hot">
        <h1 class="expirience_title">{{title}}</h1>
        <span class="expirience_badge">Hot!</span>
    </div>

    <div class="badge">
        {{#each badge}}
        <div class="badge_column">
            <strong class="badge_name">{{name}}</strong>
            <p class="badge_details">{{details}}</p>
        </div>
        {{/each}}
    </div>
    {{/with}}
</div>

<footer class=" footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>